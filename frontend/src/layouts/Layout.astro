---
import Navigation from '../components/Navigation.astro';

export interface Props {
  title: string;
  showNavigation?: boolean;
}

const { title, showNavigation = true } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Personal Finance Management System" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 text-gray-900 font-sans antialiased">
    <div class="min-h-screen flex flex-col">
      {showNavigation && (
        <Navigation currentPath={currentPath} />
      )}
      
      <main class="flex-1">
        <slot />
      </main>
      
      <footer class="bg-white border-t border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="py-6">
            <div class="flex flex-col md:flex-row justify-between items-center">
              <div class="text-sm text-gray-500">
                Â© 2024 FinanceTracker. All rights reserved.
              </div>
              <div class="flex space-x-6 mt-4 md:mt-0">
                <a href="/privacy" class="text-sm text-gray-500 hover:text-gray-700">
                  Privacy Policy
                </a>
                <a href="/terms" class="text-sm text-gray-500 hover:text-gray-700">
                  Terms of Service
                </a>
                <a href="/support" class="text-sm text-gray-500 hover:text-gray-700">
                  Support
                </a>
              </div>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>